server {
    listen 80;
    server_name _;
    root /usr/share/nginx/html;
    index index.html;

    # Gzip compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # API proxy for chat completions (requires auth)
    # Frontend calls /api/v1/chat/completions, nginx proxies to upstream with auth header
    # Uses variable-based proxy_pass to avoid startup failure when upstream is unavailable
    location /api/ {
        resolver 127.0.0.11 valid=30s;
        set $llm_upstream ${LLM_API_UPSTREAM};
        rewrite ^/api/(.*) /$1 break;
        proxy_pass $llm_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Authorization "Bearer ${LOCAL_AI_API_KEY}";
        proxy_set_header X-Enhanced-Streaming "true";

        # SSE streaming support
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 300s;
        chunked_transfer_encoding on;
    }

    # Mercury trading API proxy (uses variable to avoid startup failure if mercury is down)
    location /mercury-api/ {
        resolver 127.0.0.11 valid=30s;
        set $mercury_upstream http://mercury:9090;
        rewrite ^/mercury-api/(.*) /$1 break;
        proxy_pass $mercury_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # SSE streaming support (for /api/v1/stream)
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 3600s;
        proxy_set_header Connection '';
        proxy_http_version 1.1;
    }

    # Agent harness API proxy (command/aoe-canvas)
    location /api/harness/ {
        resolver 127.0.0.11 valid=30s;
        set $harness_upstream https://agent-harness.server.unarmedpuppy.com;
        rewrite ^/api/harness/(.*) /$1 break;
        proxy_pass $harness_upstream;
        proxy_set_header Host agent-harness.server.unarmedpuppy.com;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_ssl_server_name on;
        proxy_ssl_verify off;
    }

    # LLM router metrics proxy (command/aoe-canvas HUD)
    location /api/router/ {
        resolver 127.0.0.11 valid=30s;
        set $router_upstream https://llm-router.server.unarmedpuppy.com;
        rewrite ^/api/router/(.*) /$1 break;
        proxy_pass $router_upstream;
        proxy_set_header Host llm-router.server.unarmedpuppy.com;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_ssl_server_name on;
        proxy_ssl_verify off;
    }

    # Tasks API proxy (command/aoe-canvas)
    location /api/tasks/ {
        resolver 127.0.0.11 valid=30s;
        set $tasks_upstream https://tasks-api.server.unarmedpuppy.com;
        rewrite ^/api/tasks/(.*) /$1 break;
        proxy_pass $tasks_upstream;
        proxy_set_header Host tasks-api.server.unarmedpuppy.com;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_ssl_server_name on;
        proxy_ssl_verify off;
    }

    # No-cache for PWA files
    location = /manifest.json {
        add_header Cache-Control "no-cache";
    }

    location = /sw.js {
        add_header Cache-Control "no-cache";
    }

    # SPA routing - serve index.html for all routes
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Cache static assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
}
