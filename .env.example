# Harbor Registry (for CI/CD)
HARBOR_REGISTRY=harbor.example.com
HARBOR_PROJECT=library
HARBOR_USERNAME=
HARBOR_PASSWORD=

# Router Configuration
# Set GAMING_PC_URL to your Gaming PC's IP/hostname (e.g., http://192.168.1.100:8000)
GAMING_PC_URL=http://gaming-pc.local:8000
LOCAL_3070_URL=http://local-ai-server:8000
OPENCODE_URL=http://opencode-service:8002
SMALL_TOKEN_THRESHOLD=2000
MEDIUM_TOKEN_THRESHOLD=16000
LOG_LEVEL=INFO
ENABLE_MEMORY=1
ENABLE_METRICS=1

# Cloud Providers (optional)
ZAI_API_KEY=
ANTHROPIC_API_KEY=

# Server SSH (for agent endpoint)
# Set SERVER_SSH_HOST to your server's IP/hostname (e.g., 192.168.1.50)
SERVER_SSH_HOST=server.local
SERVER_SSH_PORT=22
SERVER_SSH_USER=user
SERVER_SSH_TIMEOUT=60

# Dashboard
LOCAL_AI_API_KEY=

# Gaming PC Manager
IDLE_TIMEOUT=600
START_TIMEOUT=180

# Homelab Services (for dashboard feed)
FRIGATE_URL=http://frigate:5000
IMMICH_URL=http://immich-server:2283
IMMICH_API_KEY=
MEALIE_URL=http://mealie:9000

# Domain (for Traefik labels)
DOMAIN=example.com
