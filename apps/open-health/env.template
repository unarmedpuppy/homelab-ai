# OpenHealth Environment Variables
# Copy this file to .env and fill in the values

# Encryption Key (REQUIRED)
# Generate with: head -c 32 /dev/urandom | base64
ENCRYPTION_KEY=

# Database URL (optional, defaults to SQLite)
# For SQLite: file:./data/db.sqlite
# For PostgreSQL: postgresql://user:password@host:5432/dbname
DATABASE_URL=file:./data/db.sqlite

# Ollama API URL (for local LLM)
# Mac: http://docker.for.mac.localhost:11434
# Windows: http://host.docker.internal:11434
# Linux: http://host.docker.internal:11434
# Or use external Ollama instance
OLLAMA_API_URL=http://host.docker.internal:11434

# Next.js Public App URL
# Used for generating absolute URLs
NEXT_PUBLIC_APP_URL=http://192.168.86.47:8095

# Auth.js Configuration
# Trusted host for authentication (required for AuthJS)
AUTH_URL=http://192.168.86.47:8095
AUTH_TRUST_HOST=true

# Optional: External LLM API Keys
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=

