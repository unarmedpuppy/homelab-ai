# OpenArchiver Environment Variables
# Copy this file to .env and fill in the values

# Database Configuration
# Generate password with: openssl rand -hex 32
POSTGRES_USER=openarchiver
POSTGRES_PASSWORD=
POSTGRES_DB=openarchiver

# Meilisearch Configuration
# Generate master key with: openssl rand -hex 32
MEILI_MASTER_KEY=

# Application Secrets
# Generate with: openssl rand -hex 32
JWT_SECRET=
ENCRYPTION_KEY=

# Application URL
# Use your domain or local IP for testing
# Examples:
#   APP_URL=http://192.168.86.47:8099
#   APP_URL=https://archive.server.unarmedpuppy.com
APP_URL=http://192.168.86.47:8099
OPEN_ARCHIVER_DOMAIN=archive.server.unarmedpuppy.com

# Optional: Storage Configuration
# For S3-compatible storage, uncomment and configure:
# STORAGE_TYPE=s3
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_REGION=us-east-1
# S3_BUCKET=openarchiver
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=

