# Trading Bot Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Interactive Brokers Configuration
# =============================================================================

# IBKR Account Credentials (REQUIRED for IB Gateway)
IBKR_USERNAME=your_ibkr_username
IBKR_PASSWORD=your_ibkr_password

# Trading Mode: 'paper' or 'live'
IBKR_TRADING_MODE=paper

# API Port: 4002 for paper trading, 4001 for live trading
IBKR_PORT=4002

# Client ID (must be unique per connection)
IBKR_CLIENT_ID=9

# Read-only mode: 'yes' to disable trading, 'no' to enable
IBKR_READ_ONLY=no

# VNC Password (optional, for debugging IB Gateway via VNC)
VNC_PASSWORD=

# =============================================================================
# Data Provider API Keys
# =============================================================================

# Alpha Vantage (free tier available)
ALPHA_VANTAGE_API_KEY=

# Polygon.io
POLYGON_API_KEY=

# Unusual Whales
UW_API_KEY=

# =============================================================================
# Social Media APIs (for sentiment analysis)
# =============================================================================

# Twitter/X API
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Reddit API
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=TradingBot/1.0
REDDIT_USERNAME=
REDDIT_PASSWORD=

# StockTwits API
STOCKTWITS_API_TOKEN=

# =============================================================================
# Monitoring
# =============================================================================

# Grafana admin password
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# Database (if using PostgreSQL instead of SQLite)
# =============================================================================

# DB_PASSWORD=your_secure_password
