{
  "dashboard": {
    "title": "Trading Bot - Risk Management",
    "tags": ["trading-bot", "risk"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Maximum Drawdown",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "risk_max_drawdown",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "thresholds",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": -10},
                {"color": "red", "value": -20}
              ]
            },
            "unit": "percent",
            "decimals": 2
          }
        }
      },
      {
        "id": 2,
        "title": "Daily Loss Limit",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "risk_daily_loss_limit",
            "refId": "A"
          },
          {
            "expr": "portfolio_daily_pnl",
            "refId": "B"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "thresholds",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": -1000},
                {"color": "red", "value": -5000}
              ]
            },
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 3,
        "title": "Position Size Limit",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "risk_position_size_limit",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": null}
              ]
            },
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 4,
        "title": "Risk Per Trade",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "risk_per_trade",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": null}
              ]
            },
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Daily P/L vs Loss Limit",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "portfolio_daily_pnl",
            "legendFormat": "Daily P/L",
            "refId": "A"
          },
          {
            "expr": "risk_daily_loss_limit",
            "legendFormat": "Loss Limit",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "currencyUSD", "label": "USD"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "thresholds": [
          {"value": null, "color": "green"},
          {"value": 0, "color": "yellow"}
        ]
      },
      {
        "id": 6,
        "title": "Portfolio P/L History",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "portfolio_total_pnl",
            "legendFormat": "Total P/L",
            "refId": "A"
          },
          {
            "expr": "portfolio_daily_pnl",
            "legendFormat": "Daily P/L",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "currencyUSD", "label": "USD"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 7,
        "title": "Position Sizes",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "open_positions * position_pnl / open_positions",
            "legendFormat": "{{symbol}} - Size",
            "refId": "A"
          },
          {
            "expr": "risk_position_size_limit",
            "legendFormat": "Limit",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "currencyUSD", "label": "Position Size"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 8,
        "title": "Trade Rejection Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "sum(rate(trades_rejected_total[5m])) / (sum(rate(trades_executed_total[5m])) + sum(rate(trades_rejected_total[5m]))) * 100",
            "legendFormat": "Rejection Rate %",
            "refId": "A"
          },
          {
            "expr": "rate(trades_rejected_total[5m])",
            "legendFormat": "{{reason}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Percentage"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 9,
        "title": "Risk Metrics Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "risk_max_drawdown",
            "legendFormat": "Max Drawdown %",
            "refId": "A"
          },
          {
            "expr": "risk_daily_loss_limit",
            "legendFormat": "Daily Loss Limit",
            "refId": "B"
          },
          {
            "expr": "portfolio_daily_pnl",
            "legendFormat": "Daily P/L",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Value"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 10,
        "title": "Risk Status Summary",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "risk_max_drawdown",
            "format": "table",
            "refId": "A"
          },
          {
            "expr": "risk_daily_loss_limit",
            "format": "table",
            "refId": "B"
          },
          {
            "expr": "portfolio_daily_pnl",
            "format": "table",
            "refId": "C"
          },
          {
            "expr": "risk_position_size_limit",
            "format": "table",
            "refId": "D"
          },
          {
            "expr": "risk_per_trade",
            "format": "table",
            "refId": "E"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {},
              "renameByName": {
                "Value #A": "Max Drawdown %",
                "Value #B": "Daily Loss Limit",
                "Value #C": "Daily P/L",
                "Value #D": "Position Size Limit",
                "Value #E": "Risk Per Trade"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Max Drawdown %"},
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "decimals",
                  "value": 2
                }
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Daily Loss Limit"},
              "properties": [
                {
                  "id": "unit",
                  "value": "currencyUSD"
                }
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Daily P/L"},
              "properties": [
                {
                  "id": "unit",
                  "value": "currencyUSD"
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "continuous-GrYlRd"
                  }
                }
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Position Size Limit"},
              "properties": [
                {
                  "id": "unit",
                  "value": "currencyUSD"
                }
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Risk Per Trade"},
              "properties": [
                {
                  "id": "unit",
                  "value": "currencyUSD"
                }
              ]
            }
          ]
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}

