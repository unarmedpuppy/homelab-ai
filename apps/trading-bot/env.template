# Trading Bot Environment Configuration
# ====================================

# Database Configuration
DATABASE_URL=sqlite:///./trading_bot.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/tradingbot
# For MySQL: DATABASE_URL=mysql://user:password@localhost:3306/tradingbot

# Data Provider API Keys
# Get free API keys from:
# - Alpha Vantage: https://www.alphavantage.co/support/#api-key
# - Polygon.io: https://polygon.io/
# - IEX Cloud: https://iexcloud.io/
# - Twelve Data: https://twelvedata.com/

ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=
IEX_CLOUD_API_KEY=
TWELVE_DATA_API_KEY=

# Unusual Whales API (Paid service)
UW_API_KEY=

# Interactive Brokers Configuration
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=9

# Trading Configuration
TRADING_DEFAULT_QTY=10
TRADING_ENTRY_THRESHOLD=0.005
TRADING_TAKE_PROFIT=0.20
TRADING_STOP_LOSS=0.10
TRADING_MAX_POSITION_SIZE=1000
TRADING_MAX_DAILY_TRADES=50

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_CORS_ORIGINS=["*"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/trading_bot.log

# Redis Configuration (for caching and background tasks)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Environment
ENVIRONMENT=development
DEBUG=false

# Security (for production)
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Monitoring (optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin
