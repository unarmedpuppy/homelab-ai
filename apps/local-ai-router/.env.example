# Local AI Router - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_PATH=/data/local-ai-router.db

# ============================================================================
# PROVIDER ENDPOINT OVERRIDES
# ============================================================================
# Override provider endpoints from config/providers.yaml

# Gaming PC 3090
PROVIDER_GAMING_PC_3090_ENDPOINT=http://192.168.86.63:8000
PROVIDER_GAMING_PC_3090_ENABLED=true

# Server 3070
PROVIDER_SERVER_3070_ENDPOINT=http://localhost:8001
PROVIDER_SERVER_3070_ENABLED=true

# Z.ai Cloud (base URL for OpenAI-compatible API)
PROVIDER_ZAI_ENDPOINT=https://api.z.ai/api/paas/v4
PROVIDER_ZAI_ENABLED=true

# Anthropic Cloud
PROVIDER_ANTHROPIC_ENDPOINT=https://api.anthropic.com
PROVIDER_ANTHROPIC_ENABLED=true

# ============================================================================
# API KEYS (Cloud Providers)
# ============================================================================

# Z.ai API Key (required if zai provider is enabled)
ZAI_API_KEY=your_zai_api_key_here

# Anthropic API Key (required if anthropic provider is enabled)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# CONFIGURATION
# ============================================================================

# Path to providers.yaml configuration
CONFIG_PATH=/app/config/providers.yaml

# Enable cloud fallback when local GPUs are busy
ENABLE_CLOUD_FALLBACK=true

# Queue timeout for local-only mode (seconds)
QUEUE_TIMEOUT=5

# Maximum queued requests
QUEUE_MAX_SIZE=10
