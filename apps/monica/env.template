# Monica Environment Variables
# Copy this file to .env and fill in the values

# Database Configuration
# Generate passwords with: openssl rand -hex 32
DATABASE_ROOT_PASSWORD=
DATABASE_PASSWORD=
DATABASE_NAME=monica
DATABASE_USER=monica

# Application Key (REQUIRED)
# Generate with: openssl rand -base64 32
# Or run: docker exec monica php artisan key:generate --show
APP_KEY=

# Application URL
# Use your domain or local IP for testing
# Examples:
#   APP_URL=http://192.168.86.47:8098
#   APP_URL=https://monica.server.unarmedpuppy.com
APP_URL=http://192.168.86.47:8098
MONICA_DOMAIN=monica.server.unarmedpuppy.com

# Email Configuration (Optional)
# Used for sending reminders and notifications
MAIL_FROM_ADDRESS=noreply@monica.local
MAIL_FROM_NAME=Monica

# Optional: SMTP Configuration
# Uncomment and configure if you want email notifications
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

