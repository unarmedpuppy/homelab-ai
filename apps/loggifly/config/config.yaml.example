# LoggiFly Configuration Example
# Copy this file to config.yaml and customize for your needs

# Example: Monitor Vaultwarden for failed login attempts
containers:
  - name: vaultwarden
    patterns:
      - keyword: "Invalid master password"
        notify: true
        title: "üîí Vaultwarden Security Alert"
        message: "Failed login attempt detected in Vaultwarden"
        # Optional: Include log context
        include_log: true
        log_lines: 10

  # Example: Monitor Plex for errors
  - name: plex
    patterns:
      - regex: "ERROR|FATAL|CRITICAL"
        notify: true
        title: "‚ö†Ô∏è Plex Error Detected"
        message: "Error detected in Plex logs"
        include_log: true
        log_lines: 20
        # Optional: Restart container on critical errors
        # restart: true

  # Example: Monitor any container for specific patterns
  - name: "*"  # Monitor all containers
    patterns:
      - regex: "Out of memory|OOM"
        notify: true
        title: "üö® Memory Issue Detected"
        message: "Out of memory error detected"
        # Optional: Stop container to prevent restart loops
        # stop: true

