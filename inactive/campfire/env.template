# Campfire Environment Variables
# Copy this file to .env and fill in the values

# Secret Key Base (REQUIRED)
# Generate with: openssl rand -hex 64
SECRET_KEY_BASE=

# VAPID Keys for Web Push Notifications (OPTIONAL)
# Generate with: docker run --rm campfire /script/admin/create-vapid-key
# Or run after container is built: docker exec campfire /script/admin/create-vapid-key
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# SSL Configuration
# Set SSL_DOMAIN to enable automatic SSL via Let's Encrypt
# Or set DISABLE_SSL=true to serve over plain HTTP (default: false)
SSL_DOMAIN=
DISABLE_SSL=false

# Sentry Error Reporting (OPTIONAL)
# SENTRY_DSN=

# Rails Environment
RAILS_ENV=production

