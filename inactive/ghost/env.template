# Ghost Environment Variables
# Copy this file to .env and fill in the values

# Database Configuration
# Generate passwords with: openssl rand -hex 32
DATABASE_ROOT_PASSWORD=
DATABASE_PASSWORD=
DATABASE_NAME=ghost
DATABASE_USER=ghost

# Ghost URL Configuration
# Use your domain or local IP for testing
# Examples:
#   GHOST_URL=http://192.168.86.47:8097
#   GHOST_URL=https://blog.server.unarmedpuppy.com
GHOST_URL=http://192.168.86.47:8097
GHOST_DOMAIN=blog.server.unarmedpuppy.com

# SMTP Email Configuration (REQUIRED)
# Ghost needs email for transactional emails (password reset, etc.)
# See: https://ghost.org/docs/config/#mail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Optional: ActivityPub (Social Web)
# Uncomment to enable self-hosted ActivityPub
# ACTIVITYPUB_TARGET=activitypub:8080

# Optional: Analytics (Tinybird)
# Requires Tinybird account setup
# TINYBIRD_API_URL=
# TINYBIRD_ADMIN_TOKEN=
# TINYBIRD_WORKSPACE_ID=
# TINYBIRD_TRACKER_TOKEN=

