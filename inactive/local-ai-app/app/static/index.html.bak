<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Local AI Chat</title>
    <link rel="stylesheet" href="/static/style.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #0f0f0f;
            color: #ffffff;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .header {
            background: #1a1a1a;
            padding: 1rem;
            border-bottom: 1px solid #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            font-size: 1.5rem;
            font-weight: 600;
        }

        .model-status {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.8rem;
            color: #888;
        }

        .model-status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            flex-shrink: 0;
        }

        .model-status-dot.ready {
            background: #4ade80;
            animation: pulse-green 2s infinite;
        }

        .model-status-dot.not-loaded {
            background: #f59e0b;
            animation: pulse-orange 2s infinite;
        }

        .model-status-dot.error {
            background: #ef4444;
            animation: pulse-red 2s infinite;
        }

        @keyframes pulse-green {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        @keyframes pulse-orange {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        @keyframes pulse-red {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .model-selector {
            display: flex;
            gap: 0.5rem;
            align-items: center;
            flex-direction: column;
        }

        .model-row {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            width: 100%;
        }

        .model-selector select {
            background: #2a2a2a;
            color: #ffffff;
            border: 1px solid #444;
            padding: 0.5rem;
            border-radius: 6px;
            font-size: 0.9rem;
        }

        .status-indicator {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.8rem;
            color: #888;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: #4ade80;
        }

        .status-dot.disconnected {
            background: #ef4444;
        }

        .chat-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .messages {
            flex: 1;
            overflow-y: auto;
            padding: 1rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .message {
            display: flex;
            gap: 0.75rem;
            max-width: 80%;
        }

        .message.user {
            align-self: flex-end;
            flex-direction: row-reverse;
        }

        .message-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            font-weight: 600;
            flex-shrink: 0;
        }

        .message.user .message-avatar {
            background: #4ade80;
            color: #000;
        }

        .message.assistant .message-avatar {
            background: #6366f1;
            color: #fff;
        }

        .message-content {
            background: #1a1a1a;
            padding: 0.75rem 1rem;
            border-radius: 12px;
            border: 1px solid #333;
            line-height: 1.5;
            word-wrap: break-word;
        }

        .message.user .message-content {
            background: #4ade80;
            color: #000;
            border-color: #4ade80;
        }

        .message.assistant .message-content {
            background: #1a1a1a;
            color: #fff;
        }

        .typing-indicator {
            display: none;
            align-items: center;
            gap: 0.5rem;
            color: #888;
            font-style: italic;
        }

        .typing-dots {
            display: flex;
            gap: 2px;
        }

        .typing-dots span {
            width: 4px;
            height: 4px;
            background: #888;
            border-radius: 50%;
            animation: typing 1.4s infinite ease-in-out;
        }

        .typing-dots span:nth-child(2) {
            animation-delay: 0.2s;
        }

        .typing-dots span:nth-child(3) {
            animation-delay: 0.4s;
        }

        @keyframes typing {
            0%, 60%, 100% {
                transform: translateY(0);
                opacity: 0.5;
            }
            30% {
                transform: translateY(-10px);
                opacity: 1;
            }
        }

        .input-container {
            padding: 1rem;
            background: #1a1a1a;
            border-top: 1px solid #333;
        }

        .input-wrapper {
            display: flex;
            gap: 0.75rem;
            align-items: flex-end;
            max-width: 800px;
            margin: 0 auto;
        }

        .input-field {
            flex: 1;
            background: #2a2a2a;
            border: 1px solid #444;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            color: #ffffff;
            font-size: 1rem;
            resize: none;
            min-height: 44px;
            max-height: 120px;
            font-family: inherit;
        }

        .input-field:focus {
            outline: none;
            border-color: #4ade80;
        }

        .input-field::placeholder {
            color: #888;
        }

        .send-button {
            background: #4ade80;
            color: #000;
            border: none;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
            min-width: 60px;
        }

        .send-button:hover:not(:disabled) {
            background: #22c55e;
        }

        .send-button:disabled {
            background: #444;
            color: #888;
            cursor: not-allowed;
        }

        .clear-button {
            background: #ef4444;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 0.5rem 0.75rem;
            font-size: 0.8rem;
            cursor: pointer;
            margin-left: 0.5rem;
        }

        .clear-button:hover {
            background: #dc2626;
        }

        .save-button {
            background: #3b82f6;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 0.5rem 0.75rem;
            font-size: 0.8rem;
            cursor: pointer;
            margin-left: 0.5rem;
        }

        .save-button:hover {
            background: #2563eb;
        }

        .load-button {
            background: #8b5cf6;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 0.5rem 0.75rem;
            font-size: 0.8rem;
            cursor: pointer;
            margin-left: 0.5rem;
        }

        .load-button:hover {
            background: #7c3aed;
        }

        .image-upload-button {
            background: #f59e0b;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 0.5rem 0.75rem;
            font-size: 0.8rem;
            cursor: pointer;
            margin-left: 0.5rem;
        }

        .image-upload-button:hover {
            background: #d97706;
        }

        .image-preview {
            max-width: 200px;
            max-height: 200px;
            border-radius: 8px;
            margin: 0.5rem 0;
            border: 1px solid #444;
        }

        .image-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            margin: 0.5rem 0;
        }

        .image-remove {
            background: #ef4444;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 0.25rem 0.5rem;
            font-size: 0.7rem;
            cursor: pointer;
            margin-top: 0.25rem;
        }

        .image-remove:hover {
            background: #dc2626;
        }

        .conversation-list {
            position: absolute;
            top: 100%;
            right: 0;
            background: #1a1a1a;
            border: 1px solid #333;
            border-radius: 8px;
            padding: 0.5rem;
            min-width: 200px;
            max-height: 300px;
            overflow-y: auto;
            z-index: 1000;
            display: none;
        }

        .conversation-item {
            padding: 0.5rem;
            cursor: pointer;
            border-radius: 4px;
            margin-bottom: 0.25rem;
            font-size: 0.8rem;
        }

        .conversation-item:hover {
            background: #2a2a2a;
        }

        .conversation-item.selected {
            background: #4ade80;
            color: #000;
        }

        .file-input {
            display: none;
        }

        .error-message {
            background: #ef4444;
            color: #fff;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            margin: 0.5rem 1rem;
            font-size: 0.9rem;
        }

        .model-info {
            font-size: 0.8rem;
            color: #888;
            margin-top: 0.25rem;
        }

        @media (max-width: 768px) {
            .message {
                max-width: 95%;
            }
            
            .header {
                flex-direction: column;
                gap: 0.5rem;
                align-items: flex-start;
            }
            
            .model-selector {
                width: 100%;
                justify-content: space-between;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Local AI Chat</h1>
        <div class="model-selector">
            <div class="model-row">
                <label for="modelSelect">Model:</label>
                <select id="modelSelect">
                    <option value="">Loading models...</option>
                </select>
            </div>
            <div class="model-status" id="modelStatus">
                <div class="model-status-dot" id="modelStatusDot"></div>
                <span id="modelStatusText">Checking status...</span>
            </div>
        </div>
        <div class="status-indicator">
            <div class="status-dot" id="statusDot"></div>
            <span id="statusText">Connecting...</span>
        </div>
    </div>

    <div class="chat-container">
        <div class="messages" id="messages">
            <div class="message assistant">
                <div class="message-avatar">AI</div>
                <div class="message-content">
                    <div>Hello! I'm your local AI assistant. Choose a model above and start chatting!</div>
                    <div class="model-info" id="modelInfo">Loading models...</div>
                </div>
            </div>
        </div>

        <div class="typing-indicator" id="typingIndicator">
            <div class="message-avatar">AI</div>
            <div class="message-content">
                <div class="typing-dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>

        <div class="input-container">
            <div class="input-wrapper">
                <div style="flex: 1; display: flex; flex-direction: column;">
                    <textarea 
                        id="messageInput" 
                        class="input-field" 
                        placeholder="Type your message here..."
                        rows="1"
                    ></textarea>
                    <div id="imageContainer" class="image-container"></div>
                </div>
                <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                    <button id="sendButton" class="send-button">Send</button>
                    <button id="imageUploadButton" class="image-upload-button">üì∑</button>
                    <button id="saveButton" class="save-button">üíæ</button>
                    <div style="position: relative;">
                        <button id="loadButton" class="load-button">üìÅ</button>
                        <div id="conversationList" class="conversation-list"></div>
                    </div>
                    <button id="clearButton" class="clear-button">üóëÔ∏è</button>
                </div>
            </div>
            <input type="file" id="fileInput" class="file-input" accept="image/*">
        </div>
    </div>

    <script>
        class LocalAIChat {
            constructor() {
                this.messages = document.getElementById('messages');
                this.messageInput = document.getElementById('messageInput');
                this.sendButton = document.getElementById('sendButton');
                this.clearButton = document.getElementById('clearButton');
                this.saveButton = document.getElementById('saveButton');
                this.loadButton = document.getElementById('loadButton');
                this.imageUploadButton = document.getElementById('imageUploadButton');
                this.fileInput = document.getElementById('fileInput');
                this.imageContainer = document.getElementById('imageContainer');
                this.conversationList = document.getElementById('conversationList');
                this.modelSelect = document.getElementById('modelSelect');
                this.modelStatusDot = document.getElementById('modelStatusDot');
                this.modelStatusText = document.getElementById('modelStatusText');
                this.statusDot = document.getElementById('statusDot');
                this.statusText = document.getElementById('statusText');
                this.typingIndicator = document.getElementById('typingIndicator');
                this.modelInfo = document.getElementById('modelInfo');

                this.conversationHistory = [];
                this.isConnected = false;
                this.currentImages = [];
                this.availableModels = {};
                this.modelStatus = {};
                this.savedConversations = this.loadSavedConversations();
                this.statusCheckInterval = null;

                this.init();
            }

            async init() {
                this.setupEventListeners();
                await this.checkConnection();
                await this.loadModels();
                await this.checkModelStatus();
                this.updateModelInfo();
                this.startStatusPolling();
                
                // Auto-resize textarea
                this.messageInput.addEventListener('input', () => {
                    this.messageInput.style.height = 'auto';
                    this.messageInput.style.height = Math.min(this.messageInput.scrollHeight, 120) + 'px';
                });

                // Send on Enter (Shift+Enter for new line)
                this.messageInput.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' && !e.shiftKey) {
                        e.preventDefault();
                        this.sendMessage();
                    }
                });
            }

            setupEventListeners() {
                this.sendButton.addEventListener('click', () => this.sendMessage());
                this.clearButton.addEventListener('click', () => this.clearChat());
                this.saveButton.addEventListener('click', () => this.saveConversation());
                this.loadButton.addEventListener('click', () => this.toggleConversationList());
                this.imageUploadButton.addEventListener('click', () => this.fileInput.click());
                this.fileInput.addEventListener('change', (e) => this.handleImageUpload(e));
                this.modelSelect.addEventListener('change', () => this.updateModelInfo());
                
                // Close conversation list when clicking outside
                document.addEventListener('click', (e) => {
                    if (!this.loadButton.contains(e.target) && !this.conversationList.contains(e.target)) {
                        this.conversationList.style.display = 'none';
                    }
                });
            }

            async checkConnection() {
                try {
                    const response = await fetch('/health');
                    const data = await response.json();
                    
                    if (data.status === 'healthy') {
                        this.isConnected = true;
                        this.statusDot.classList.remove('disconnected');
                        this.statusText.textContent = 'Connected';
                    } else {
                        this.isConnected = false;
                        this.statusDot.classList.add('disconnected');
                        this.statusText.textContent = 'Disconnected';
                    }
                } catch (error) {
                    this.isConnected = false;
                    this.statusDot.classList.add('disconnected');
                    this.statusText.textContent = 'Connection Error';
                }
            }

            async loadModels() {
                try {
                    const response = await fetch('/models/info');
                    const data = await response.json();
                    this.availableModels = data.models;
                    
                    // Clear existing options
                    this.modelSelect.innerHTML = '';
                    
                    // Add model options
                    Object.keys(this.availableModels).forEach(modelId => {
                        const option = document.createElement('option');
                        option.value = modelId;
                        option.textContent = this.availableModels[modelId].name;
                        this.modelSelect.appendChild(option);
                    });
                    
                    // Set default model
                    if (Object.keys(this.availableModels).length > 0) {
                        this.modelSelect.value = Object.keys(this.availableModels)[0];
                    }
                } catch (error) {
                    console.error('Failed to load models:', error);
                    this.modelSelect.innerHTML = '<option value="">Error loading models</option>';
                }
            }

            handleImageUpload(event) {
                const files = Array.from(event.target.files);
                files.forEach(file => {
                    if (file.type.startsWith('image/')) {
                        // Check file size (max 10MB)
                        if (file.size > 10 * 1024 * 1024) {
                            alert(`File ${file.name} is too large. Maximum size is 10MB.`);
                            return;
                        }
                        
                        // Check number of images (max 5)
                        if (this.currentImages.length >= 5) {
                            alert('Maximum 5 images allowed per message.');
                            return;
                        }
                        
                        const reader = new FileReader();
                        reader.onload = (e) => {
                            this.addImagePreview(e.target.result, file.name);
                        };
                        reader.readAsDataURL(file);
                    } else {
                        alert(`File ${file.name} is not an image.`);
                    }
                });
                // Clear the input so the same file can be selected again
                event.target.value = '';
            }

            addImagePreview(dataUrl, fileName) {
                const imageDiv = document.createElement('div');
                imageDiv.style.position = 'relative';
                imageDiv.style.display = 'inline-block';
                imageDiv.style.marginRight = '0.5rem';
                
                const img = document.createElement('img');
                img.src = dataUrl;
                img.className = 'image-preview';
                img.alt = fileName;
                
                const removeBtn = document.createElement('button');
                removeBtn.className = 'image-remove';
                removeBtn.textContent = 'Remove';
                removeBtn.onclick = () => {
                    imageDiv.remove();
                    this.currentImages = this.currentImages.filter(img => img !== dataUrl);
                };
                
                imageDiv.appendChild(img);
                imageDiv.appendChild(removeBtn);
                this.imageContainer.appendChild(imageDiv);
                
                this.currentImages.push(dataUrl);
            }

            saveConversation() {
                if (this.conversationHistory.length === 0) {
                    alert('No conversation to save');
                    return;
                }
                
                const conversationName = prompt('Enter a name for this conversation:', 
                    `Conversation ${new Date().toLocaleString()}`);
                
                if (conversationName) {
                    const conversation = {
                        id: Date.now().toString(),
                        name: conversationName,
                        model: this.modelSelect.value,
                        messages: [...this.conversationHistory],
                        timestamp: new Date().toISOString()
                    };
                    
                    this.savedConversations[conversation.id] = conversation;
                    this.saveSavedConversations();
                    alert('Conversation saved!');
                }
            }

            toggleConversationList() {
                if (this.conversationList.style.display === 'none' || this.conversationList.style.display === '') {
                    this.renderConversationList();
                    this.conversationList.style.display = 'block';
                } else {
                    this.conversationList.style.display = 'none';
                }
            }

            renderConversationList() {
                this.conversationList.innerHTML = '';
                
                const conversations = Object.values(this.savedConversations)
                    .sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
                
                if (conversations.length === 0) {
                    const emptyDiv = document.createElement('div');
                    emptyDiv.textContent = 'No saved conversations';
                    emptyDiv.style.padding = '1rem';
                    emptyDiv.style.color = '#888';
                    this.conversationList.appendChild(emptyDiv);
                    return;
                }
                
                conversations.forEach(conversation => {
                    const item = document.createElement('div');
                    item.className = 'conversation-item';
                    item.innerHTML = `
                        <div style="font-weight: 600;">${conversation.name}</div>
                        <div style="font-size: 0.7rem; color: #888;">
                            ${new Date(conversation.timestamp).toLocaleString()}
                        </div>
                        <div style="font-size: 0.7rem; color: #888;">
                            Model: ${this.availableModels[conversation.model]?.name || conversation.model}
                        </div>
                    `;
                    
                    item.onclick = () => {
                        this.loadConversation(conversation);
                        this.conversationList.style.display = 'none';
                    };
                    
                    this.conversationList.appendChild(item);
                });
            }

            loadConversation(conversation) {
                this.conversationHistory = [...conversation.messages];
                this.modelSelect.value = conversation.model;
                this.updateModelInfo();
                
                // Clear current messages
                this.messages.innerHTML = '';
                
                // Re-render messages
                conversation.messages.forEach(msg => {
                    this.addMessage(msg.role, msg.content);
                });
                
                this.scrollToBottom();
            }

            loadSavedConversations() {
                try {
                    const saved = localStorage.getItem('localAI_conversations');
                    return saved ? JSON.parse(saved) : {};
                } catch (error) {
                    console.error('Failed to load saved conversations:', error);
                    return {};
                }
            }

            saveSavedConversations() {
                try {
                    localStorage.setItem('localAI_conversations', JSON.stringify(this.savedConversations));
                } catch (error) {
                    console.error('Failed to save conversations:', error);
                }
            }

            updateModelInfo() {
                const selectedModel = this.modelSelect.value;
                if (this.availableModels[selectedModel]) {
                    const model = this.availableModels[selectedModel];
                    this.modelInfo.textContent = `Current model: ${model.name} - ${model.description}`;
                } else {
                    this.modelInfo.textContent = `Current model: ${selectedModel}`;
                }
                this.updateModelStatusDisplay();
            }

            async checkModelStatus() {
                try {
                    const response = await fetch('/model-status');
                    const data = await response.json();
                    this.modelStatus = data.model_status || {};
                    this.updateModelStatusDisplay();
                } catch (error) {
                    console.error('Failed to check model status:', error);
                    this.modelStatus = {};
                    this.updateModelStatusDisplay();
                }
            }

            updateModelStatusDisplay() {
                const selectedModel = this.modelSelect.value;
                if (!selectedModel || !this.modelStatus[selectedModel]) {
                    this.modelStatusDot.className = 'model-status-dot error';
                    this.modelStatusText.textContent = 'Status unknown';
                    return;
                }

                const status = this.modelStatus[selectedModel];
                this.modelStatusDot.className = `model-status-dot ${status.status}`;
                
                switch (status.status) {
                    case 'ready':
                        this.modelStatusText.textContent = 'Ready';
                        break;
                    case 'not_loaded':
                        this.modelStatusText.textContent = 'Not loaded';
                        break;
                    case 'disconnected':
                        this.modelStatusText.textContent = 'Disconnected';
                        break;
                    case 'error':
                        this.modelStatusText.textContent = 'Error';
                        break;
                    default:
                        this.modelStatusText.textContent = 'Unknown';
                }
            }

            startStatusPolling() {
                // Check model status every 10 seconds
                this.statusCheckInterval = setInterval(() => {
                    this.checkModelStatus();
                }, 10000);
            }

            stopStatusPolling() {
                if (this.statusCheckInterval) {
                    clearInterval(this.statusCheckInterval);
                    this.statusCheckInterval = null;
                }
            }

            async sendMessage() {
                const message = this.messageInput.value.trim();
                if ((!message && this.currentImages.length === 0) || !this.isConnected) return;

                // Prepare message content
                let messageContent = message;
                if (this.currentImages.length > 0) {
                    // For multimodal models, we'll send images as base64
                    messageContent = {
                        text: message,
                        images: this.currentImages
                    };
                }

                // Add user message
                this.addMessage('user', message, this.currentImages);
                this.messageInput.value = '';
                this.messageInput.style.height = 'auto';
                this.clearImages();

                // Disable input
                this.sendButton.disabled = true;
                this.messageInput.disabled = true;

                // Show typing indicator
                this.showTypingIndicator();

                try {
                    const response = await this.getAIResponse(messageContent);
                    this.hideTypingIndicator();
                    this.addMessage('assistant', response);
                } catch (error) {
                    this.hideTypingIndicator();
                    this.addErrorMessage(`Error: ${error.message}`);
                } finally {
                    // Re-enable input
                    this.sendButton.disabled = false;
                    this.messageInput.disabled = false;
                    this.messageInput.focus();
                }
            }

            clearImages() {
                this.imageContainer.innerHTML = '';
                this.currentImages = [];
            }

            async getAIResponse(message) {
                // Handle multimodal content
                let messageContent;
                if (typeof message === 'object' && message.images) {
                    // For multimodal models, format the message properly
                    messageContent = message.text || '';
                    // Note: For now, we'll send text only. Full multimodal support would require
                    // updating the backend to handle base64 images in the message format
                } else {
                    messageContent = message;
                }
                
                this.conversationHistory.push({ role: 'user', content: messageContent });

                const response = await fetch('/v1/chat/completions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        model: this.modelSelect.value,
                        messages: this.conversationHistory,
                        max_tokens: 1000,
                        temperature: 0.7,
                        stream: false
                    })
                });

                if (!response.ok) {
                    const errorData = await response.json().catch(() => ({}));
                    throw new Error(errorData.detail || `HTTP ${response.status}`);
                }

                const data = await response.json();
                const aiMessage = data.choices[0].message.content;
                
                this.conversationHistory.push({ role: 'assistant', content: aiMessage });
                return aiMessage;
            }

            addMessage(role, content, images = []) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${role}`;
                
                const avatar = document.createElement('div');
                avatar.className = 'message-avatar';
                avatar.textContent = role === 'user' ? 'You' : 'AI';
                
                const contentDiv = document.createElement('div');
                contentDiv.className = 'message-content';
                
                // Add text content
                if (content) {
                    const textDiv = document.createElement('div');
                    textDiv.textContent = content; // textContent automatically escapes HTML
                    contentDiv.appendChild(textDiv);
                }
                
                // Add images if any
                if (images && images.length > 0) {
                    images.forEach(imageDataUrl => {
                        const imgDiv = document.createElement('div');
                        imgDiv.style.marginTop = '0.5rem';
                        
                        const img = document.createElement('img');
                        img.src = imageDataUrl;
                        img.style.maxWidth = '200px';
                        img.style.maxHeight = '200px';
                        img.style.borderRadius = '8px';
                        img.style.border = '1px solid #444';
                        
                        imgDiv.appendChild(img);
                        contentDiv.appendChild(imgDiv);
                    });
                }
                
                messageDiv.appendChild(avatar);
                messageDiv.appendChild(contentDiv);
                
                this.messages.appendChild(messageDiv);
                this.scrollToBottom();
            }

            addErrorMessage(message) {
                const errorDiv = document.createElement('div');
                errorDiv.className = 'error-message';
                errorDiv.textContent = message;
                
                this.messages.appendChild(errorDiv);
                this.scrollToBottom();
            }

            showTypingIndicator() {
                this.typingIndicator.style.display = 'flex';
                this.scrollToBottom();
            }

            hideTypingIndicator() {
                this.typingIndicator.style.display = 'none';
            }

            clearChat() {
                this.messages.innerHTML = `
                    <div class="message assistant">
                        <div class="message-avatar">AI</div>
                        <div class="message-content">
                            <div>Chat cleared! How can I help you today?</div>
                            <div class="model-info" id="modelInfo">Current model: ${this.availableModels[this.modelSelect.value]?.name || this.modelSelect.value}</div>
                        </div>
                    </div>
                `;
                this.conversationHistory = [];
                this.clearImages();
                this.updateModelInfo();
            }

            scrollToBottom() {
                this.messages.scrollTop = this.messages.scrollHeight;
            }
        }

        // Initialize the chat when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            window.chatInstance = new LocalAIChat();
        });

        // Cleanup when page is unloaded
        window.addEventListener('beforeunload', () => {
            if (window.chatInstance) {
                window.chatInstance.stopStatusPolling();
            }
        });
    </script>
</body>
</html>
